package com.example;

public class ThreadRun implements Runnable {
	public static ThreadRun t1;
	public static ThreadRun t2;
	
	public static void main(String[] args) {
		 t1=new ThreadRun();//new born
		 t2=new ThreadRun();
		 t1.start();
		
		 t2.start();
		
		
	}
	public void run()
	{
		for(int i=0;i<=5;i++)
		{
			System.out.println(i);
			if(i==3)
			{
				t1.interrupt();
			}
			try {
				Thread.sleep(3000);
			}
			catch(Exception e)
			{
				e.printStackTrace();
			}
		}
	}
}
